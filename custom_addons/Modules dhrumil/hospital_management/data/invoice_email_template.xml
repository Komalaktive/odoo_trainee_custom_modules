<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_move_email_template" model="mail.template">
            <field name="name">Mail send Template</field>
            <field name="model_id" ref="hospital_management.model_account_move"/>
            <field name="email_from">${'noreply@localhost'}</field>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">Test email template</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                        <p>Dear ${(object.name)},
                            <br/>
                            <br/>
                            Good job, this is our first e-mail template!<br/>
                        </p>
                        Regards,<br/>
                        ${(object.partner_id.name)}
                        jadu he nasha he
                </div>    
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    
    </data>
</odoo>

