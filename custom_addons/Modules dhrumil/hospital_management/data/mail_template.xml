<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="email_template" model="mail.template">
            <field name="name">Mail send Template</field>
            <field name="model_id" ref="hospital_management.model_patient_info"/>
            <field name="email_from">${'noreply@localhost'}</field>
            <field name="email_to">${object.doctor_select.email}</field>
            <field name="subject">Test email template</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                        <p>Dear ${(object.doctor_select.name)},
                            <br/>
                            <br/>
                            Good job, this is our first e-mail template!<br/>
                        </p>
                        Regards,<br/>
                        ${(object.name)}
                </div>    
            </field>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="action_patient_id_card"/>
        </record>
    
    </data>
</odoo>

