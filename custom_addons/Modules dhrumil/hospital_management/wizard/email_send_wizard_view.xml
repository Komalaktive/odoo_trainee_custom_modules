<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_send_wizard_form_view" model="ir.ui.view">
            <field name="name">email.send.wizard.form</field>
            <field name="model">email.send.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="is_email"/>
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" string="send" name="send_mail" type="object"/>
                    </footer> 
                </form>
            </field>
        </record>

        <record id="send_mail_action" model="ir.actions.act_window">
            <field name="name">Send Mail</field>
            <field name="res_model">email.send.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="hospital_management.model_patient_info"/>
            <field name="binding_view_types">list,form</field>
        </record>

    </data>
</odoo>