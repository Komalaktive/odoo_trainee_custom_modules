<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_hospital_management">
        <field name="name">School Management</field>
        <field name="sequence">19</field>
    </record>
    
    <record id="module_hospital_user" model="ir.module.category">
        <field name="name">Hospital Management</field>
        <field name="sequence">21</field>
        <field name="parent_id" ref="module_category_hospital_management"/>
    </record>

    <record id="group_patient_user" model="res.groups">
        <field name="name">Patient</field>
        <field name="category_id" ref="module_hospital_user"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_doctor_user" model="res.groups">
        <field name="name">Doctor</field>
        <field name="category_id" ref="module_hospital_user"/>
        <field name="implied_ids" eval="[(4, ref('group_patient_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

</odoo>    
