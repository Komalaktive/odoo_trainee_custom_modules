<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_with_payment_inherit_template" inherit_id="account.report_invoice_document">
        <xpath expr="//address[@t-field='o.partner_id']" position="replace">
            <address t-field="o.partner_id" t-options='{"widget": "contact", 
            "fields": ["phone", "email"], "no_marker": True}' />
        </xpath>
        <!-- <xpath expr="//table[@class='table table-sm o_main_table']/thead/tr/th[@name='th_subtotal']" position="after">
            <th class="text-right">
                <span>new_field</span>
            </th>
        </xpath> -->
    </template>
    <template id="account_move_inherit_template_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//table[@class='table table-sm o_main_table']/thead/tr/th[@name='th_description']" position="after">
            <th name="creator" class="text-right">
                <span>Creator</span>
            </th>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']//tbody//tr//td[@name='account_invoice_line_name']" position="after">
            <td name="module_creator_name">
                <span t-field="line.module_creator"/>
            </td>
        </xpath>
    </template>
</odoo>