<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hospital</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Hospital" string="Hospital" data-key="hospital_management" groups="hospital_management.group_doctor_user">
                        <h2>Hospital Management</h2>
                        <div class="row mt16 o_settings_container" name="fiscal_localization_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Patient Information</span>
                                    <div class="text-muted">
                                        This i text muted string in view.
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="patient_name" string="Patient" class="col-lg-3 o_light_label"/>
                                            <field name="patient_name"
                                            />
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="patient_case" class="o_light_label" widget="radio"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6 o_setting_box"
                             id="automatic_case_fee"
                             attrs="{'invisible': [('patient_case', '=', 'is_old_case')]}">
                                <div class="o_setting_right_pane">
                                    <label for="case_fee" string="Case Fee"/>
                                    <field name="case_fee"/>
                                    <div class="text-muted">
                                        Generate the invoice automatically when the online payment is confirmed
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>