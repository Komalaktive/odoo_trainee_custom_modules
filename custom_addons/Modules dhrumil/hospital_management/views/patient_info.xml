<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="patient_info_tree_view">
        <field name="name">patient.info.tree.view</field>
        <field name="model">patient.info</field>
        <field name="arch" type="xml">
            <tree>
              <field name='id'/>
              <field name='name'/>
              <field name="problem"/>
              <field name="doctor_select"/>
              <field name="patient_email"/>
            </tree>
        </field>
  </record>

  <record model="ir.ui.view" id="patient_info_form_view">
        <field name="name">patient.info.form.view</field>
        <field name="model">patient.info</field>
        <field name="arch" type="xml">
          <form>
            <header>
              <button class="oe_highlight" name="mail_send_action"
                                string="Send email" type="object"/>
              <button class="oe_highlight" name="getInvoiceData"
                                string="Invoice Data" type="object"/>
            </header>                    
          	<sheet>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="problem"/>
                        <field name="doctor_select"/>
                        <field name="patient_email"/>
                        <field name="birthdate"/>
                    </group>
                </group>
          	</sheet>
          </form>
        </field>  
  </record>        

  <record id="patient_info_view" model="ir.actions.act_window">
      <field name="name">Patient</field>
      <field name="res_model">patient.info</field>
      <field name="view_mode">tree,form</field>
  </record>


  <menuitem id="hospital_root" name="Hospital"/>
  <menuitem id="hospital_nav" name="Patient" parent="hospital_root" action="patient_info_view"/>

</odoo>