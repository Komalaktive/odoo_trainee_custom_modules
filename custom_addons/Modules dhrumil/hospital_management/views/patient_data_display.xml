<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="patient_detail_template" name="Patient Details">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <br />
                        <center><h3>Patient Details</h3></center>
                    <br />
                    <table class="table-striped table">
                        <thead style="font-size: 23px;">
                            <tr>
                                <h6>
                                    <b>
                                        <th>Name</th>
                                        <th>Problem</th>
                                        <th>Doctor</th>
                                        <th><b>email</b></th>
                                    </b>
                                </h6>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="patient_detail" t-as="pt">
                                <tr>
                                    <td><span t-esc="pt.name"/></td>
                                    <td><span t-esc="pt.problem"/></td>
                                    <td><span t-esc="pt.doctor_select.name"/></td>
                                    <td><span t-esc="pt.patient_email"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>
</odoo>