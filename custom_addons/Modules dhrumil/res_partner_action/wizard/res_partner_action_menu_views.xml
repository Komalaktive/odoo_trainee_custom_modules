<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="create_record_action_form_view" model="ir.ui.view">
        <field name="name">create.record.action.form.view</field>
        <field name="model">res.partner.create.record</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="date"/>
                    <field name="sale_order_lines_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="product_price"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="close_wizard" string="Close" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="create_record_action_list" model="ir.actions.act_window">
        <field name="name">Create Sale Order</field>
        <field name="res_model">res.partner.create.record</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_view_types">list,form</field>
    </record>

</odoo>