<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_student" name="Show Quotations / Sales Orders / student" customize_show="True" inherit_id="portal.portal_my_home" priority="1">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Student</t>
                <t t-set="url" t-value="'/student'"/>
                <t t-set="placeholder_count" t-value="'stu_count'"/>
            </t>
        </xpath> 
    </template>

    <template id="portal_my_home_teacher" name="Show Quotations / Sales Orders / student / teacher" customize_show="True" inherit_id="portal.portal_my_home" priority="2">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Teacher</t>
                <t t-set="url" t-value="'/teacher'"/>
                <t t-set="placeholder_count" t-value="'tea_count'"/>
            </t>
        </xpath> 
    </template>

    <template id="portal_my_home_sport" name="Show Quotations / Sales Orders / student / teacher / sport" customize_show="True" inherit_id="portal.portal_my_home" priority="3">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Sport</t>
                <t t-set="url" t-value="'/sport'"/>
                <t t-set="placeholder_count" t-value="'spo_count'"/>
            </t>
        </xpath> 
    </template>

</odoo>