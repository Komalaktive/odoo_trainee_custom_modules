<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_menu_sport" name="Portal layout : sport menu entries" inherit_id="portal.portal_breadcrumbs" priority="20">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'sport'" t-attf-class="breadcrumb-item">
                <a t-if="sport_info" t-attf-href="/sport">Sports</a>
                <t t-else="">Sports</t>
            </li>
        </xpath>
    </template>

    <template id="detail_sport_data" name="Sport Detail Data">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Sport Detail</t>
            </t>
            <t t-if="sp_data" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th class="text-left">Name</th>
                        <th class="text-left">Entry Fee</th>
                    </tr>
                </thead>
                <t t-foreach="sp_data" t-as="sp">
                    <tr>
                        <td class="text-left"><t t-esc="sp.sport_name"/></td>
                        <td class="text-left"><t t-esc="sp.entry_fee"/></td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

</odoo>