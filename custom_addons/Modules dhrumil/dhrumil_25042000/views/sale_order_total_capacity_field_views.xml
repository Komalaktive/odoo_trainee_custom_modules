<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="total_capacity_field" model="ir.ui.view">
        <field name="name">total.capacity.field</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_total']/field[hasclass('oe_subtotal_footer_separator')]" position="after">
                <label for="total_capacity"/>
                <div class="o_row">
                    <field name="total_capacity"/><span> </span>
                    <button class="oe_highlight" name="calulate_total_capacity"
                                string="Count" type="object"/>
                </div>            
            </xpath>
        </field>
    </record>

</odoo>