<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="requirement_gathering_view_tree" model="ir.ui.view">
        <field name="name">requirement.gathering.view.tree</field>
        <field name="model">requirement.gathering</field>
        <field name="arch" type="xml">
            <tree string="Requirements">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="company"/>
                <field name="business_type"/>
                <field name="category"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="requirement_gathering_view_form" model="ir.ui.view">
        <field name="name">requirement.gathering.view.form</field>
        <field name="model">requirement.gathering</field>
        <field name="arch" type="xml">
            <form string="Requirements">
                <header>
                    <button string="Approve" class="oe_highlight"
                            name="button_won_state" type="object" groups="dhrumil_25042000.req_gathering_manager"/>
                    <button string="Reject" class="oe_highlight"
                            name="button_lost_state" type="object" groups="dhrumil_25042000.req_gathering_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="company"/>
                            <field name="business_type"/>
                            <field name="category"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="requirement_gathering_view_search" model="ir.ui.view">
        <field name="name">requirement.gathering.view.search</field>
        <field name="model">requirement.gathering</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="company"/>
                <field name="business_type"/>
                <field name="category"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_requirement_gathering_form" model="ir.actions.act_window">
        <field name="name">Requirement gathering</field>
        <field name="res_model">requirement.gathering</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
