<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="max_qty_allowed_field" model="ir.ui.view">
        <field name="name">max.qty.allowed.field</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="max_qty_allowed"/>
            </xpath>
        </field>
    </record>

</odoo>