<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="business_type_view_tree" model="ir.ui.view">
        <field name="name">business.type.view.tree</field>
        <field name="model">business.type</field>
        <field name="arch" type="xml">
            <tree string="Type">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="business_type_view_form" model="ir.ui.view">
        <field name="name">business.type.view.form</field>
        <field name="model">business.type</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="business_type_view_search" model="ir.ui.view">
        <field name="name">business.type.view.search</field>
        <field name="model">business.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_business_type_form" model="ir.actions.act_window">
        <field name="name">Business type</field>
        <field name="res_model">business.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
