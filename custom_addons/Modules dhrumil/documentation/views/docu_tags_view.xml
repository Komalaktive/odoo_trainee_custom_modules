<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="docu_tags_tree_view" model="ir.ui.view">
            <field name="name">docu.tags.tree.view</field>
            <field name="model">docu.tags</field>
            <field name="arch" type="xml">
                <tree string="Document Tags">
                    <field name="tag"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="docu_tags_form_view" model="ir.ui.view">
            <field name="name">docu.tags.form.view</field>
            <field name="model">docu.tags</field>
            <field name="arch" type="xml">
                <form string="Document Tags">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <group>
                                <field name="tag"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>     
                    </sheet>
                </form>
            </field>
        </record>

        <record id="docu_tags_kanban_view" model="ir.ui.view">
            <field name="name">docu.tags.kanban.view</field>
            <field name="model">docu.tags</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="tag"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <field name="tag"/>
                                    <div t-if="record.tag.raw_value">Tag: <t t-esc="record.tag.value"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="docu_tags_search_view" model="ir.ui.view">
            <field name="name">docu.tags.search.view</field>
            <field name="model">docu.tags</field>
            <field name="arch" type="xml">
                <search string="Tags Analysis">
                    <field name="tag"/>
                    <separator/>
                    <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="docu_tags_form_action" model="ir.actions.act_window">
            <field name="name">Tags</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">docu.tags</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem id="tags_nav" name="Tags" parent="documentation_root" action="docu_tags_form_action"/>
    </data>
</odoo>