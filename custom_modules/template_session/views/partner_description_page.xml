<odoo>
    <template id="partner_description_page" name="partner details page">
        <t t-call="website.layout">
            <t t-set="title">Partner Detail Page</t>
            <div class="flex-container">
                <div class="partner_details" style="width: 80%; float:right">
                    <h2 style="text-align:left">
                        <u>
                            <span t-field="partner.name"></span>
                        </u>
                    </h2>
                    <t t-esc="partner.email"/>
                    <br></br>
                    <t t-esc="partner.phone"/>
                    <br>
                        <t t-esc="partner.street"/>
                    </br>
                </div>

                <div class="partner_description" style="width: 20%; float:left">
                    <span t-field="partner.image_1920" t-options='{"widget":"image"}'/>
                </div>
            </div>
            <div>
                <t t-if="partner.team_leader">
                    <div class="contact_member_tbl">
                        <label>Team leaders:</label>
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="partner.team_ids" t-as="members">
                                    <tr>
                                        <td>
                                            <t t-esc="members.id"/>
                                        </td>
                                        <td>
                                            <t t-esc="members.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="members.phone"/>
                                        </td>
                                        <td>
                                            <t t-esc="members.email"/>
                                        </td>

                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>

            </div>

        </t>

    </template>

    <template id="create_new_contact" name="create contact page">
        <t t-call="website.layout">
            <t t-set="title">create contact Page</t>
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
            <h1 class="text-left">Create Contact</h1>
            <form class="col-form-label" role="form" action="/partner/list" type="post">
               <div class="contact_form_main_wrapper">
                            <div class="partner_basic_details_wrapper">
                                <div class="row">
                                    <div class="col-md-9 partner_details_wrapper">
                                        <input type="hidden" name="partner_id" id="partner_id" t-att-value="(partner) and partner.id"/>
                                        <h3>Profile</h3>
                                        <div class="row form_input_wrapper">
                                            <div class="col-md-12">
                                                <input type="text" name="name" id="name" placeholder="Name" class="form-control" t-att-value="(partner) and partner.name"/>
                                            </div>
                                        </div>

                                        <div class="row form_input_wrapper">
                                            <div class="col-md-8">
                                                <input type="email" name="email" id="email" placeholder="E-mail" class="form-control" t-att-value="(partner) and partner.email"/>
                                            </div>
                                            <div class="col-md-4">
                                                <input type="tel" name="phone" id="phone" placeholder="Phone" class="form-control" t-att-value="(partner) and partner.phone"/>
                                            </div>
                                        </div>

                                        <h3>Address</h3>
                                        <div class="row form_input_wrapper">
                                            <div class="col-md-12">
                                                <input type="text" name="street" id="street" placeholder="Address line 1" class="form-control" t-att-value="(partner) and partner.street"/>
                                            </div>
                                        </div>
                                        <div class="row form_input_wrapper">
                                            <div class="col-md-12">
                                                <input type="text" name="street2" id="street2" placeholder="Additional Address" class="form-control" t-att-value="(partner) and partner.street2"/>
                                            </div>
                                        </div>

                                        <div class="row form_input_wrapper">
                                            <div class="col-md-4">
                                                <input type="text" name="city" id="city" placeholder="City" class="form-control" t-att-value="(partner) and partner.city"/>
                                            </div>

                                            <div class="col-md-4">
                                                <select name="state_id" id="state_id" class="form-control">
                                                    <option value="">Select State</option>
                                                    <t t-foreach="states" t-as="state">
                                                        <option t-att-value="state.id" t-att-selected="(partner and partner.state_id and partner.state_id.id == state.id) and 'selected'">
                                                            <t t-esc="state.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>

                                            <div class="col-md-4">
                                                <input type="text" name="zip" id="zip" placeholder="Zip" class="form-control" t-att-value="(partner) and partner.zip"/>
                                            </div>

                                        </div>

                                        <div class="row form_input_wrapper">
                                            <div class="col-md-9">
                                                <select name="country_id" id="country_id" class="form-control">
                                                    <option value="">Select Country</option>
                                                    <t t-foreach="countries" t-as="country">
                                                        <option t-att-value="country.id" t-att-selected="(partner and partner.country_id and partner.country_id.id == country.id) and 'selected'">
                                                            <t t-esc="country.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                            <div class="col-md-3">
                                                <input type="checkbox" name="team_lead" id="team_lead" class="" t-att-checked="(partner and partner.team_lead) and 'checked'"/>
                                                <label for="team_lead">Team Lead?</label>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-3 partner_image_wrapper">
                                        <div class="partner_image_block">
                                            <img id="partner_image" t-att-src="(partner) and '/web/image/res.partner/%s/image_1920' % partner.id or '/template_session/static/image/placeholder.png'"></img>
                                            <div class="image_buttons_wrapper">
                                                <label for="partner_image_input" class="image_option_btn_label">
                                                    <i class="fa fa-pencil-square-o select_image image_option_btn"/>
                                                </label>
                                                <i class="fa fa-trash-o delete_image image_option_btn"/>
                                            </div>
                                        </div>
                                        <input type="file" class="d-none" name="image_1920" id="partner_image_input" accept="image/*"/>
                                        <input type="hidden" name="delete_image" id="delete_image" t-att-value="False"/>
                                    </div>
                                </div>
                            </div>
                            <div t-attf-class="partner_team_details_wrapper #{(not partner or partner and not partner.team_lead) and 'd-none'}">
                                <h1>Hello</h1>
                            </div>
                        </div>
                        <div class="">
                            <button class="btn btn-primary" id="contact_form_submit_btn" type="submit">Save</button>
                        </div>
                    </form>
        </t>
    </template>
</odoo>