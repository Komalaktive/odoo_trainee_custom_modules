<odoo>
    <template id="demo_page" name="Demo page">
        <t t-call="website.layout">
            <t t-set="title">Demo Page</t>
            <div class="oe_structure">
                <div class="container">
                    <nav class="navbar navbar-light bg-light">
                        <a class="navbar-brand">Contacts</a>
                        <form class="form-inline" action="/contact/create_new_contact">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i
                                    class="fa fa-address-book-o"/>&#160;Create new contact
                            </button>
                        </form>
                    </nav>
                    <input type="text" name="search" id="filter_table" class="form-control" placeholder="Search"/>
                    <div class="contacts_list_wrapper">
                        <table id="partners_list" align="center">
                            <thead>
                                <tr>
                                    <th class="contact_name_col display_web">Image</th>
                                    <th class="contact_name_col display_web">Name</th>
                                    <th class="contact_name_col display_web">Email</th>
                                    <th class="contact_name_col display_web">Mobile</th>
                                    <th class="contact_name_col display_web">Address</th>
                                    <th class="contact_name_col display_web">TL</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="contact_row" t-foreach="partners" t-as="partner"
                                    t-attf-data-href="/partner/details/#{partner.id}">
                                    <td>
                                        <span t-field="partner.image_1920" t-options='{"widget":"image"}'/>
                                    </td>

                                    <td class="contact_name_col">
                                        <t t-esc="partner.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="partner.email"/>
                                    </td>
                                    <td>
                                        <t t-esc="partner.phone"/>
                                    </td>
                                    <td>
                                        <t t-esc="partner.street"/>
                                    </td>
                                    <!--                                <td><input type="checkbox" t-esc="partner.team_leader"/></td>-->
                                    <td>
                                        <input type="checkbox" disabled="true"
                                               t-att-checked="(partner.team_leader) and 'checked'"/>
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
