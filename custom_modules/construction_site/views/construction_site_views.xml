<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <!-- explicit list view definition -->
    <record id="construction_site_list" model="ir.ui.view">
        <field name="name">construction_site list</field>
        <field name="model">construction.site</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="delivery_address"/>
                <field name="responsible_internal_id"/>
                <field name="responsible_on_site_id"/>
            </tree>
        </field>
    </record>


    <!-- explicit form view definition -->
    <record id="construction_site_form" model="ir.ui.view">
        <field name="name">construction_site list</field>
        <field name="model">construction.site</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_running" string="Running" class="oe_highlight" type="object" states="running"/>

                    <button name="action_stopped" string="Stopped" class="oe_highlight"
                            type="object"/>
                    <button name="action_draft" string="Draft" class="oe_highlight"
                            type="object"/>
                    <button name="action_inclosing" string="In closing" class="oe_highlight"
                            type="object"/>
                    <button name="action_closed" string="Closed" class="oe_highlight"
                            type="object"/>
                    <field name="state" widget="statusbar" options="{'clickable':1}"
                           statusbar_visible="draft,running,stopped,inclosing,closed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="delivery_address"/>
                            <field name="responsible_internal_id"/>
                            <field name="responsible_on_site_id"/>
                        </group>
                        <group>
                            <field name="scheduled_date"/>
                            <field name="reference"/>
                        </group>
                    </group>
                </sheet>
            </form>

        </field>
    </record>


    <record id="construction_site_action" model="ir.actions.act_window">
        <field name="name">Construction site</field>
        <field name="res_model">construction.site</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="construction_site_root_menu" name="Construction Site "/>
    <menuitem name="construction site application" id="construction_site_app_menu" action="construction_site_action"
              parent="construction_site_root_menu"/>


</odoo>