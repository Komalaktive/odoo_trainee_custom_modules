<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="student_report_page">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
<!--                        <div class="oe_structure"/>-->
                        <div class="row">
                            <div class="col-xs-2" style="margin:100px;">
                            </div>
                            <center>
                                <div class="col-xs-8" style="margin:auto">
                                    <img t-attf-src="data:image/*;base64,{{o.school_image}}"/>
                                    <!-- to call a function -->
                                    <t t-esc="o.test_data()"/>
                                    <table class="table table-condensed" style="border: 3px dotted black !important;">
                                        <tr>
                                            <td width="40%">
                                                <p>
                                                    <h2>
                                                        <strong>
                                                                <span t-field="o.name"/>
                                                        </strong>
                                                    </h2>
                                                </p>
                                            </td>
                                            <td width="60%">
                                                <table style="border: 3px solid black !important;">
                                                    <tr>
                                                        <td>
                                                            <p>
                                                                <strong>Email:</strong>
                                                            </p>
                                                            <p>
                                                                <strong>Phone:</strong>
                                                            </p>
                                                            <p>
                                                                <strong>Result:</strong>
                                                            </p>
                                                            <p>
                                                                <strong>Address</strong>
                                                            </p>
                                                            <p>
                                                                <strong>School Rank</strong>
                                                            </p>
                                                            <p>
                                                                <strong>Res Partner</strong>
                                                            </p>
                                                        </td>
                                                        <td>
                                                            <p style="padding-left:10px;"
                                                               t-field="o.email"/>
                                                            <p style="padding-left:10px;"
                                                               t-field="o.phone"/>
                                                            <p style="padding-left:10px;"
                                                               t-field="o.result"/>
                                                            <p style="padding-left:10px;"
                                                                t-field="o.address"/>
                                                            <p style="padding-left:10px;"
                                                                t-field="o.school_rank"/>
                                                            <p style="padding-left:10px;"
                                                                t-field="o.res_partners"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </center>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

   

    <record id="student_report_action" model="ir.actions.report">
        <field name="name">Student Data</field>
        <field name="model">school.profile</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_manage.student_report_page</field>
        <field name="report_file">school_manage.student_report_page</field>
        <field name="binding_model_id" ref="model_school_profile"/>
        <field name="binding_type">report</field>
    </record>
</odoo>