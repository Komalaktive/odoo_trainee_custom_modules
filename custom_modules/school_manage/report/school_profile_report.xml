<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_student_detail">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Student Detail</h2>
                        <p>Student Information <span t-field="o.name"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>

   

    <record id="report_student_detail" model="ir.actions.report">
        <field name="name">Student Data</field>
        <field name="model">school.profile</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_manage.report_student_detail</field>
        <field name="report_file">school_manage.report_student_detail</field>
        <field name="binding_model_id" ref="model_school_profile"/>
        <field name="binding_type">report</field>
    </record>
</odoo>