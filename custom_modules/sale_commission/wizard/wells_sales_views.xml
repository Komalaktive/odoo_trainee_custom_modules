<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sales_report_wizard" model="ir.ui.view">
        <field name="name">Sales Wells Wizard</field>
        <field name="model">wells.sales.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="group_sale_wells">
                        <group>
                            <field name="from_date" attrs="{'required':[('to_date', '!=', False)]}"/>
                            <field name="customer_selection" widget="radio"/>
                            <field name="partner_ids" widget="many2many_tags"
                                   attrs="{'invisible':[('customer_selection', '=', 'all_customer')], 'required':[('customer_selection', '=', 'specific_customer')]}"/>
                        </group>
                        <group>
                            <field name="to_date" attrs="{'required':[('from_date', '!=', False)]}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Print" name="print_wells_sales_report" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sales_report_wizard" model="ir.actions.act_window">
        <field name="name">Wells Sales Report</field>
        <field name="res_model">wells.sales.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_wells_sales_report"
        name="Wells Sales Report"
        action="action_sales_report_wizard"
        parent="sale.menu_sale_report"
        sequence="2"/>


</odoo>