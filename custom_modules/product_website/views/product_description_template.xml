<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="product_description_page" name="Product Description page">
        <t t-call="website.layout">
            <t t-set="title">Product Description</t>
            <div class="flex-container">
                <div>
                     <span t-field="product.image_1920"
                                          t-options='{"widget":"image"}'/>
                </div>
                <div>
                    <h2><span t-field="product.name"></span></h2>
                    <t t-esc="product.list_price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                    <div>
                        <t t-if="product.product_variant_id">
                            <h3><span t-field="product.attribute_line_ids"/></h3>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>

























