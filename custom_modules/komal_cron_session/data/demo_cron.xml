<odoo>


  <record id="demo_cron" model="ir.cron">
    <field name="name">Demo Cron Job</field>
    <field name="model_id" ref="model_sale_order"/>
    <field name="state">code</field>
    <field name="code">model.demo_cron()</field>
    <field name="user_id" ref="base.user_root"/>
    <field name='interval_number'>1</field>
    <field name='interval_type'>days</field>
    <field name="numbercall">-1</field>
    <field name="nextcall" eval="(datetime.now().replace(hour=22, minute=00, second=0, microsecond=0) + timedelta(days=1))"/>
        <field name="doall" eval="False"/>
  </record>


</odoo>