<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">
    <record model="ir.module.category" id="cat_purchase_requisition">
        <field name="name">Purchase Requisition</field>
        <field name="sequence">103</field>
    </record>
    <record id="group_purchase_requisition_buyer" model="res.groups">
        <field name="name">Buyer</field>
        <field name="category_id" ref="cat_purchase_requisition"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]" />
    </record>

    <record id="group_purchase_requisition_approval" model="res.groups">
        <field name="name">PR Approval</field>
        <field name="category_id" ref="cat_purchase_requisition"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_purchase_requisition_user" model="res.groups">
        <field name="name">Creation User</field>
        <field name="category_id" ref="cat_purchase_requisition"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]" />
    </record>
</data>
<data noupdate="1">

    <record id="purchase_requisition_admin_rule" model="ir.rule">
        <field name="name">Purchase Requisition Administration</field>
        <field name="model_id" ref="purchase_requisition_creation.model_purchase_requisition_allocation"/>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="purchase_requisition_pr_creation_user_rule" model="ir.rule">
        <field name="name">Purchase Requisition PR Creation</field>
        <field name="model_id" ref="purchase_requisition_creation.model_purchase_requisition_allocation"/>
        <field name="domain_force">[('created_by_id', '=', user.id), ('state', '=', ('waiting for approval'))]</field>
        <field name="groups" eval="[(4, ref('purchase_requisition_creation.group_purchase_requisition_user'))]"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
    </record>

    <record id="purchase_requisition_pr_approval_rule" model="ir.rule">
        <field name="name">Purchase Requisition PR Approval</field>
        <field name="model_id" ref="purchase_requisition_creation.model_purchase_requisition_allocation"/>
        <field name="domain_force">[('state', 'in', ('waiting for approval', 'approved', 'reject'))]</field>
        <field name="groups" eval="[(4, ref('purchase_requisition_creation.group_purchase_requisition_approval'))]"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
    </record>

    <record id="purchase_requisition_pr_approval_line_rule" model="ir.rule">
        <field name="name">Purchase Requisition PR Line Approval</field>
        <field name="model_id" ref="purchase_requisition_creation.model_purchase_requisition_allocation_line"/>
        <field name="domain_force">[('pr_state', 'in', ('waiting for approval', 'approved', 'reject'))]</field>
        <field name="groups" eval="[(4, ref('purchase_requisition_creation.group_purchase_requisition_approval'))]"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
    </record>

    <record id="purchase_requisition_line_admin_rule" model="ir.rule">
        <field name="name">Purchase Requisition Line Administration</field>
        <field name="model_id" ref="purchase_requisition_creation.model_purchase_requisition_allocation_line"/>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="purchase_requisition_line_buyer_rule" model="ir.rule">
        <field name="name">Purchase Requisition Line Buyer</field>
        <field name="model_id" ref="purchase_requisition_creation.model_purchase_requisition_allocation_line"/>
        <field name="domain_force">[('purchase_group_id', '=', user.id), ('pr_state', 'in', ('approved', 'closed'))]</field>
        <field name="groups" eval="[(4, ref('purchase_requisition_creation.group_purchase_requisition_buyer'))]"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
    </record>
</data>
</odoo>