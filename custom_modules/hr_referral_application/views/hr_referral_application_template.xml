<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="referral_program_template" name="Referral Program">
        <t t-call="website.layout">
            <h1 class="text-center">Referral Registration</h1>
            <div class="oe_structure">
                <form role="form" action="/submit_referral_program" type="post">
                    <div class="form">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name"/>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control"
                                   placeholder="abc@gmail.com"/>
                        </div>

                        <div class="form-group">
                            <label for="reference_id" class="form-label">Refferal Name</label>
                            <br></br>
                            <select name="reference_id" class="form-select form-select-sm mb-3">
                                <t t-foreach="reference_id" t-as="refferal">
                                    <option t-esc="refferal.name" t-att-value="refferal.id"/>
                                </t>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="degree_id" class="form-label">Degree</label>
                            <br></br>
                            <select name="degree_id" class="form-select form-select-sm mb-3">
                                <t t-foreach="degree_id" t-as="degree">
                                    <option t-esc="degree.name" t-att-value="degree.id"/>
                                </t>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="dept_id" class="form-label">Department</label>
                            <br></br>
                            <select name="dept_id" class="form-select form-select-sm mb-3">
                                <t t-foreach="dept_id" t-as="dept_dg">
                                    <option t-esc="dept_dg.id" t-att-value="dept_dg.id"/>
                                </t>
                            </select>
                        </div>

<!--                         <div class="form-group">-->
<!--                             <label for="dept_id" class="form-label">Department</label>-->
<!--                             <br></br>-->
<!--                             <select name="dept_id" class="form-select form-select-sm mb-3">-->
<!--                                 <t t-foreach="dept_id" t-as="dept">-->
<!--                                    <option t-esc="dept.name" />-->
<!--                                 </t>-->
<!--                             </select>-->
<!--                         </div>-->

                        <div class="oe_login_buttons">
                            <button type="submit" name="csrf_token" t-att-value="request.csrf_token()"
                                    class="btn btn-primary">Submit
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </t>
    </template>
    <template id="thank_you_template" name="Thank you">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <div class="alert alert-success" role="alert">
                        Thank You
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>